#!/usr/bin/env bash

set \
  -o nounset \
  -o pipefail \
  -o errexit

# GitHub repository name
readonly repository="99designs/aws-vault"

get_platform() {
  [ "Linux" = "$(uname)" ] && echo "linux64" || echo "osx-amd64"
}

# stolen from https://github.com/rbenv/ruby-build/pull/631/files#diff-fdcfb8a18714b33b07529b7d02b54f1dR942
sort_versions() {
  sed 'h; s/[+-]/./g; s/.p\([[:digit:]]\)/.z\1/; s/$/.z/; G; s/\n/ /' | \
    LC_ALL=C sort -t. -k 1,1 -k 2,2n -k 3,3n -k 4,4n -k 5,5n | awk '{print $2}'
}

github_auth() {
  if [ -n "$GITHUB_API_TOKEN" ]; then
    echo "-H 'Authorization: token $GITHUB_API_TOKEN'"
  fi
}

# https://github.com/Banno/asdf-hashicorp/blob/master/bin/list-all
list_all() {
  local versions=""
  local version
  local url="https://api.github.com/repos/${repository}/releases"
  local auth=""
  auth=$(github_auth)
  for version in $(curl --silent ${auth} "${url}" | \
    grep '"tag_name":' | \
    sed 's/.*"v\([^"]\+\)".*/\1/' |
    sort_versions); do
    if [[ -z "${versions}" ]]; then
      versions="${version}"
    else
      versions="${version} ${versions}"
    fi
  done
  echo "${versions}"
}

list_all
